<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- CSS -->
  <link rel="stylesheet" href="../static/css/login.css">
  <!-- favicons -->
  <link rel="apple-touch-icon" sizes="180x180" href="./static/icon/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="./static/icon/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="./static/icon/favicon-16x16.png">
  <link rel="manifest" href="./static/icon/site.webmanifest">
  <!-- Title of page -->
  <title>Welcome to Stack &#169</title>
  <!-- imports -->
  <script src="https://kit.fontawesome.com/242d91a26c.js" crossorigin="anonymous"></script>
</head>
<body class ="h-screen w-screen ">
  <div class=" h-full w-full lg:bg-left-bottom transition-all  bg-gradient-to-r from-purple-600 to-blue-500 backdrop-blur-md" >
    <div class="flex flex-col lg:flex  h-full w-full duration-300">
      <nav class="flex w-full h-fit justify-around text-2xl text-white py-5 ">
        <i class="fa-solid fa-city hover:text-yellow-300"></i>
        <h1 class ="font-pacifico text-3xl text-yellow-300">Stack</h1>
        <i class="fa-solid fa-cubes-stacked hover:text-yellow-300"></i>
      </nav>
      <div class = "h-screen ">
        <form action="authenticate" method="post" class = "flex flex-col justify-around h-full w-full items-center">
            <div class ='flex flex-col items-center space-y-7'>
              <input type="text" name="username" id="username " placeholder="<%= who ==='user'?'User':'Admin' %> " class ="bg-transparent  border-2 border-white placeholder-white rounded-full p-5 px-14 text-white ">
              <input type="password" name="password" id="password" placeholder="<%= wrong==='true'?'Invalid Password':'Password' %>" class ="bg-transparent border-2 rounded-full p-5 px-14 text-white <%= wrong==='true'?'border-red-500 placeholder-red-500 animate-pulse':'border-white placeholder-white' %>  ">
            </div>
             
            <div>
            <button type="submit" class ="bg-transparent border-2 border-white rounded-full py-2 font-roboto font-extrabold hover:scale-110 duration-300 hover:text-yellow-300 hover:border-4 hover:border-yellow-300   text-white px-10">Log In</button>
            </div>
        </form>
      </div>
      </div>
    </div>
  </div>
</body>
</html>
