<!doctype html>
<html>
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- CSS -->
  <link rel="stylesheet" href="../../static/css/uDashboard.css">
  <!-- favicons -->
  <link rel="apple-touch-icon" sizes="180x180" href="./static/icon/apple-touch-icon.png">
  <link rel="icon" type="image/png" sizes="32x32" href="./static/icon/favicon-32x32.png">
  <link rel="icon" type="image/png" sizes="16x16" href="./static/icon/favicon-16x16.png">
  <link rel="manifest" href="./static/icon/site.webmanifest">
  <!-- Title of page -->
  <title>Welcome to Stack &#169</title>
  <!-- imports -->
  <script src="https://kit.fontawesome.com/242d91a26c.js" crossorigin="anonymous"></script>
</head>
<body class ="h-screen w-screen ">
  <div class=" h-full w-full lg:bg-left-bottom transition-all  bg-gradient-to-r from-purple-600 to-blue-500 backdrop-blur-md" >
    <div class="flex flex-col lg:flex  h-full w-full duration-300">
      <nav class="flex w-full h-fit justify-around text-2xl text-white py-5 ">
        <i class="fa-solid fa-city hover:text-yellow-300"></i>
        <h1 class ="font-pacifico text-3xl text-yellow-300">Stack</h1>
        <i class="fa-solid fa-cubes-stacked hover:text-yellow-300"></i>
      </nav>
      <div class = 'text-white  pt-10 font-bold font-pacifico w-screen'>
        <h1 class="text-center text-2xl">Welcome <span class="text-yellow-300"><%= user %></span>, </h1>
      </div>
      <!-- tab selection button -->
      <div class = "flex justify-around text-lg text-white font-Roboto pt-16 font-mono ">
        <button id = 'comp' class = "border-2 border-white rounded-xl transition-all duration-100 px-6  py-4 ">Complaints</button>
        <button id ='resolve' class = " px-6  py-4">Resolve</button>
      </div>
      <div class = "h-screen ">
        <!-- form section -->
        <form action="#" id = 'frm1' method="get" class = "flex flex-col justify-around h-full w-full items-center">
            <div class ='flex flex-col items-center space-y-7'>
              <select name="staff" id="staff-select" class ="bg-transparent border-2 border-white rounded-full p-5 px-14 placeholder-white text-white ">
                  <option value="">--Please choose an option--</option>
                  <option value="AC repair">Ac repair</option>
                  <option value="Room Cleaning">Room Cleaning</option>
                  <option value="Electrician">Electrician</option>
                  <option value="Carpenter">Carpenter</option>
              </select>
              <input type="text" name="roll" id="roll" placeholder="Staff ID" class ="w-full bg-transparent border-2 border-white rounded-full p-5 px-14 placeholder-white text-white ">
            </div>
            <div>
              <button type="submit" class ="bg-transparent border-2 border-white rounded-full py-2 font-roboto font-extrabold hover:scale-110 duration-300 hover:text-yellow-300 hover:border-4 hover:border-yellow-300   text-white px-10">Submit</button>
            </div>
        </form>
        <!-- returning the comlaint id -->
        <!-- <div class = "  text-center text-4xl flex flex-col items-center h-full justify-center  font-pacifico text-white pt-50 ">
          <h1>Your complaint id is : </h1>
          <h1 class = " text-yellow-400">10924850</h1>
        </div> -->
        <!-- ressorlve form  -->
        <form  action="#" method="get" class = " hidden flex flex-col justify-around h-full w-full items-center " id ="frm2">
          <div class ='flex flex-col items-center space-y-7'>
            <input type="text" name="CompId" id="compId" placeholder="Complaint ID" class ="w-full bg-transparent border-2 border-white rounded-full p-5 px-14 placeholder-white text-white ">
            <input type="text" name="staffId" id="staffId" placeholder="Staff ID" class ="w-full bg-transparent border-2 border-white rounded-full p-5 px-14 placeholder-white text-white ">
          </div>
          <div>
            <button type="submit" class ="bg-transparent border-2 border-white rounded-full py-2 font-roboto font-extrabold hover:scale-110 duration-300 hover:text-yellow-300 hover:border-4 hover:border-yellow-300   text-white px-10">Submit</button>
          </div>
      </form>
      </div>
      </div>
    </div>
  </div>
<script src="../../static/js/main.js"></script>
</body>
</html>
